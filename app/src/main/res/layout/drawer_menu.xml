<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#f4f2f5"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="按类型筛选"
        android:textColor="#737373" />

    <com.xinayida.deep.pages.category.DrawerMenuContainer
        android:id="@+id/drawer_menu_container_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mode_single="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#f4f2f5"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="按标签筛选"
        android:textColor="#737373" />

    <com.xinayida.deep.pages.category.DrawerMenuContainer
        android:id="@+id/drawer_menu_container_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mode_single="true"/>


</LinearLayout>