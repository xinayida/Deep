<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottombar_navigate"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#c0000000"
    >
   	<RadioGroup
		android:id="@+id/toolbar_bottom"
		android:background="@drawable/fm_toolbar_blue"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:layout_gravity="bottom">
   		<RadioButton 
   			android:id="@+id/radio_prevPage"
   			android:background="@drawable/radiobutton_prevpage"
   			style="@style/bar"/>
   		<RadioButton 
			android:background="@drawable/radiobutton_search"
   			android:id="@+id/radio_search"
   			style="@style/bar"/>
   		<RadioButton 
			android:background="@drawable/radiobutton_nextpage"
   			android:id="@+id/radio_nextPage"
   			style="@style/bar"/>
   		
   	</RadioGroup>
    
</RelativeLayout>
